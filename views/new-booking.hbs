<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Review your booking request &bull; Keybase</title>
        {{#checkEnv}}
            {{#if development}}
                <link rel="stylesheet" href="/css/tailwind.css" />
                <link rel="stylesheet" href="/vendor/fontawesome/css/all.css" />
                <link
                    rel="stylesheet"
                    href="/vendor/owlcarousel/owl.carousel.css"
                />
                <link
                    rel="stylesheet"
                    href="/vendor/owlcarousel/owl.theme.green.css"
                />
                <link rel="stylesheet" href="/css/custom.css" />
            {{/if}}
            {{#if production}}
                <link rel="stylesheet" href="/dist/css/keybase.min.css" />
            {{/if}}
        {{/checkEnv}}
    </head>

    <body class="bg-gray-100 text-gray-900">
        <header class="border-b border-gray-300 bg-white z-100">
            <div
                class="mx-auto max-w-4xl lg:max-w-5xl flex justify-between items-center p-3"
            >
                <div>
                    <div class="text-xl font-semibold">
                        <div class="flex items-center"><a
                                href="/"
                                class="flex items-center text-gray-700"
                            ><img
                                    src="/img/logo.svg"
                                    class="w-auto h-6 mr-2"
                                    alt="Keybase logo"
                                />Keybase</a></div>
                    </div>
                </div>
                <div id="mobile-menu" class="sm:h-auto flex font-semibold">
                    <a
                        href="#"
                        class="inline py-2 px-4 text-gray-700 hover:text-green-600 transition duration-200"
                    >Help?</a>
                </div>
            </div>
        </header>
        <main
            class="max-w-4xl lg:max-w-5xl mx-auto px-3 mt-8 md:mt-12 md:mb-20"
        >
            <h1 class="w-full text-xl md:text-3xl font-semibold">Review your
                booking request</h1>
            <div class="md:flex md:flex-row-reverse justify-between mt-6">
                <div class="w-full md:w-1/2 lg:w-2/5 md:ml-6 lg:ml-12">
                    <div
                        class="md:bg-white md:rounded-md md:border md:border-gray-400"
                    >
                        <img
                            crossorigin="anonymous"
                            src="{{imgUrl}}"
                            class="w-full sm:h-64 object-cover rounded-md md:rounded-none md:rounded-t-md"
                            alt="room image"
                        />
                        <div class="md:p-6 pt-3">
                            <p
                                class="uppercase tracking-wider text-xs font-semibold text-gray-700"
                            >{{roomType}} in {{area}}</p>
                            <h1
                                class="text-lg font-semibold my-1"
                            >{{description}}</h1>
                            <div class="flex mb-4">
                                <p class="mr-3"><i
                                        class="fa fa-bed bg mr-2 text-gray-800"
                                    ></i><span
                                        class="mr-1 font-semibold"
                                    >{{beds}}</span>Bedroom{{greater beds}}</p>
                                <p><i
                                        class="fa fa-bath mr-2 text-gray-800"
                                    ></i><span
                                        class="mr-1 font-semibold"
                                    >{{baths}}</span>Bathroom{{greater baths}}
                                </p>
                            </div>
                            <div class="border-t border-gray-300"></div>
                            <div class="my-4">
                                <p class="flex justify-between my-1">
                                    <span>Contract type</span>
                                    <span
                                        class="text-green-500 font-semibold"
                                    >Yearly</span></p>
                                <p class="flex justify-between my-1">
                                    <span>Room type</span>
                                    <span
                                        class="text-green-500 font-semibold"
                                    >{{roomType}}</span></p>
                            </div>
                            <div
                                class="border-t border-gray-300 hidden md:block"
                            ></div>
                            <div
                                class="mt-4 p-3 md:p-0 bg-gray-300 md:bg-transparent rounded-md"
                            >
                                <h4
                                    class="mb-3 font-semibold text-gray-700"
                                >Payments to be made</h4>
                                <div class="flex justify-between mb-1">
                                    <span class="relative">First rental payment
                                        <button
                                            data-toggle="rent"
                                            class="tooltip-toggle focus:outline-none ml-1 text-gray-700"
                                        >
                                            <i
                                                class="fa fa-info-circle"
                                            ></i></button>
                                        <div id="rent" class="tooltip">
                                            This is the rent payment for a full
                                            year, which will be paid to the
                                            landlord once you've confirmed the
                                            place.
                                        </div>
                                    </span>
                                    <span>{{displayRent}}</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="relative">One time service fee
                                        <button
                                            data-toggle="fee"
                                            class="tooltip-toggle focus:outline-none ml-1 text-gray-700"
                                        ><i
                                                class="fa fa-info-circle"
                                            ></i></button>
                                        <div id="fee" class="tooltip">
                                            This helps us in running our
                                            platform, and also helps us to keep
                                            in touch with you until you move in.
                                        </div>
                                    </span>
                                    <span>{{displayFee}}</span>
                                </div>
                                <p
                                    class="flex justify-between mt-2 font-semibold"
                                >
                                    <span>Total</span>
                                    <span>{{displayTotal}}</span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <p
                        class="text-sm text-center mx-auto mt-3 text-gray-700 font-semibold"
                    >You will pay the landlord once you confirm the place</p>
                    <div class="my-8">
                        <div class="p-3 md:p-6 bg-gray-300 rounded-md">
                            {{#if lodge.bills.length}}
                                <p class="font-semibold text-gray-700">Bills</p>
                                <div class="mt-3">
                                    {{#each lodge.bills}}
                                        <p
                                            class="flex w-full justify-between"
                                        ><span>{{bill}}</span><span>{{amount}}
                                                <span
                                                    class="text-gray-700"
                                                >/{{payEvery}}</span></span></p>
                                    {{/each}}
                                </div>
                            {{else}}
                                <p class="text-sm">No bills included</p>
                            {{/if}}
                        </div>
                        <p
                            class="text-sm text-center mx-auto mt-3 text-gray-700 font-semibold"
                        >You will pay the bills directly to the landlord</p>
                    </div>
                </div>
                <div class="w-full md:w-1/2 lg:w-3/5">
                    <form
                        id="new-booking-form"
                        action="/new-booking/pay"
                        method="POST"
                    >
                        <input
                            type="hidden"
                            name="_csrf"
                            value="{{_csrfToken}}"
                        />
                        <input type="hidden" name="rid" value="{{rid}}" />
                        <input
                            type="hidden"
                            name="userFullName"
                            value="{{user.displayName}}"
                        />
                        <input
                            type="hidden"
                            name="userEmail"
                            value="{{user.email}}"
                        />
                        <div class="border border-gray-200 md:hidden"></div>
                        <div class="my-3 relative">
                            <div class="w-full">
                                <h2
                                    class="text-lg font-semibold"
                                >Important!</h2>
                                <p
                                    class="text-gray-600 text-sm sm:text-base"
                                >Please check the rules and conditions before
                                    proceeding to book this room</p>
                                <div class="owl-carousel mt-4">
                                    <div class="item text-white"></div>
                                    <div class="item text-white"></div>
                                </div>
                                <div id="carousel" class="relative -mt-4">
                                    <div class="owl-carousel owl-theme">
                                        <div
                                            class="item info-card m-1 p-8 md:px-16 bg-white rounded-md shadow"
                                        >
                                            <div class="mb-3">
                                                <img
                                                    src="/img/motel.svg"
                                                    class="w-10 h-10 md:w-12 md:h-12"
                                                    alt=""
                                                />
                                            </div>
                                            <div>
                                                <h2
                                                    class="text-xl font-semibold"
                                                >Lodge rules</h2>
                                                <p
                                                    class="text-gray-600 text-sm"
                                                >About the lodge</p>
                                                <ul class="mt-4">
                                                    {{#each lodge.rules}}
                                                        <li
                                                            class="text-gray-700"
                                                        >
                                                            {{#if allowed}}
                                                                <i
                                                                    class="fa fa-check mr-1 text-green-600"
                                                                ></i>
                                                            {{else}}
                                                                <i
                                                                    class="fa fa-times mr-1 text-red-600"
                                                                ></i>
                                                                <span>No</span>
                                                            {{/if}}
                                                            {{rule}}
                                                            allowed
                                                        </li>
                                                    {{/each}}
                                                </ul>
                                                {{#if lodge.curfew}}
                                                    <div class="mt-3">
                                                        <h2
                                                            class="font-semibold"
                                                        >Curfew</h2>
                                                        <p
                                                            class="text-gray-700"
                                                        >Gate closes at
                                                            {{lodge.curfew.closes}},
                                                            opens at
                                                            {{lodge.curfew.opens}}</p>
                                                    </div>
                                                {{/if}}
                                            </div>
                                        </div>
                                        <div
                                            class="item info-card m-1 p-8 md:px-16 bg-white rounded-md shadow"
                                        >
                                            <div class="mb-3">
                                                <img
                                                    src="/img/booking.svg"
                                                    class="w-10 h-10 md:w-12 md:h-12"
                                                    alt=""
                                                />
                                            </div>
                                            <div>
                                                <h2
                                                    class="text-xl font-semibold"
                                                >After booking</h2>
                                                <p
                                                    class="text-gray-600 text-sm"
                                                >What happens next</p>
                                                <div class="mt-4">
                                                    <p>Your landlord will be
                                                        notified of your booking
                                                        immediately
                                                    </p>
                                                    <p
                                                        class="mt-2 font-semibold"
                                                    >Your booking will contain
                                                        the lodge location and
                                                        your landlord contact</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div
                                            class="item info-card m-1 p-8 md:px-16 bg-white rounded-md shadow"
                                        >
                                            <div class="mb-3">
                                                <img
                                                    src="/img/move-in.svg"
                                                    class="w-10 h-10 md:w-12 md:h-12"
                                                    alt=""
                                                />
                                            </div>
                                            <div>
                                                <h2
                                                    class="text-xl font-semibold"
                                                >Moving in</h2>
                                                <p
                                                    class="text-gray-600 text-sm"
                                                >New year, new lodge</p>
                                                <div class="mt-4">
                                                    <p>Your move in date will be
                                                        set 24 hours after
                                                        approving the rent to
                                                        your landlord</p>
                                                    <p
                                                        class="mt-2 font-semibold"
                                                    >We will be in contact with
                                                        you up until your move
                                                        in date</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div
                                            class="item info-card m-1 p-8 h-64 md:px-16 bg-white rounded-md shadow"
                                        >
                                            <div class="mb-3">
                                                <img
                                                    src="/img/pack-up.svg"
                                                    class="w-10 h-10 md:w-12 md:h-12"
                                                    alt=""
                                                />
                                            </div>
                                            <div>
                                                <h2
                                                    class="text-xl font-semibold"
                                                >Moving out</h2>
                                                <p
                                                    class="text-gray-600 text-sm"
                                                >Find a new lodge</p>
                                                <div class="mt-4">
                                                    <p>Your move out date will
                                                        be set one year after
                                                        move in day</p>
                                                    <p
                                                        class="mt-2 font-semibold"
                                                    >If you choose to stay for
                                                        another year, the rent
                                                        will be paid directly to
                                                        the landlord</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div
                                        class="nav hidden absolute z-50 px-3 text-green-600 w-full md:flex justify-between"
                                    >
                                        <button
                                            id="prev"
                                            class="inline-flex h-8 w-8 font-semibold bg-white border border-gray-100 shadow-md rounded-full items-center justify-center focus:outline-none"
                                        >
                                            <i class="fa fa-chevron-left"></i>
                                        </button>
                                        <button
                                            id="next"
                                            class="inline-flex h-8 w-8 font-semibold bg-white border border-gray-100 shadow-md rounded-full items-center justify-center focus:outline-none"
                                        >
                                            <i class="fa fa-chevron-right"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="my-3 md:my-6">
                            <div class="w-full">
                                <div
                                    class="p-4 bg-green-200 border border-green-300 rounded-md text-sm mt-3 mb-6"
                                >
                                    <p class="font-semibold text-gray-900">After
                                        completing this page, you will be taken
                                        to a secure checkout page, where you
                                        will be charged.</p>
                                    <p class="my-3">But your rent won't be sent
                                        to the landlord until you visit and
                                        confirm the place, at which you can
                                        approve the payment or cancel and get a
                                        full refund on your rent payment.</p>
                                    <p>Also see our
                                        <a
                                            href="#"
                                            class="font-semibold text-green-700 hover:underline"
                                        >Refund Policy</a></p>
                                </div>
                                <div class="mt-6">
                                    <p class="text-sm text-gray-700">By clicking
                                        the "Book this room" button below, you
                                        agree to be taken to a secure checkout
                                        page where you will be charged the total
                                        amount as shown on this page, you also
                                        agree to have read our
                                        <a
                                            href="#"
                                            class="font-semibold text-green-600 hover:underline"
                                        >Privacy Policy</a>
                                        and
                                        <a
                                            href="#"
                                            class="font-semibold text-green-600 hover:underline"
                                        >Refund Policy</a></p>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 mb-8 relative flex justify-end">
                            <button
                                type="submit"
                                class="py-3 px-5 w-full sm:w-auto rounded-md font-semibold uppercase tracking-wider bg-green-500 hover:bg-green-600 text-white focus:outline-none focus:shadow-outline transition duration-150"
                            ><i class="fa fa-lock mr-2"></i>Book this room</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>

        {{#checkEnv}}
            {{#if development}}
                <script src="/js/jquery.js"></script>
                <script src="/js/global.js"></script>
                <script src="/vendor/owlcarousel/owl.carousel.js"></script>
                <script src="/js/owlcarousel_config.js"></script>
            {{/if}}
            {{#if production}}
                <script
                    src="https://code.jquery.com/jquery-3.5.1.min.js"
                ></script>
                <script src="/dist/js/keybase.min.js"></script>
            {{/if}}
        {{/checkEnv}}
    </body>

</html>