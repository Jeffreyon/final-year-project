<form
    action="/rooms"
    class="w-full p-5 pt-8 bg-white sm:rounded-lg text-gray-800 sm:shadow-lg"
>
    <div class="relative">
        <label
            for="area"
            class="text-gray-600 uppercase text-xs font-semibold"
        >Area</label>
        <select
            class="appearance-none focus:outline-none border border-gray-300 focus:shadow-outline mt-1 bg-gray-100 p-4 block w-full rounded-md"
            name="area"
            id=""
        >
            <option disabled selected>Choose where you want to stay...</option>
            {{#form_data "areas"}}
                {{#if areas}}
                    {{#each areas}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                {{/if}}
            {{/form_data}}
        </select>
        <i
            class="fa fa-chevron-down absolute top-0 right-0 m-12 mr-4 text-gray-600"
        ></i>
    </div>
    <div class="mt-4 relative">
        <label
            for="roomType"
            class="text-gray-600 uppercase text-xs font-semibold"
        >Room type</label>
        <select
            class="select-box-arrow appearance-none border border-gray-300 focus:outline-none focus:shadow-outline mt-1 bg-gray-100 p-4 block w-full rounded-md"
            name="roomType"
            id=""
        >
            <option disabled selected>Choose the kind of place...</option>
            {{#form_data "room_types"}}
                {{#if room_types}}
                    {{#each room_types}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                {{/if}}
            {{/form_data}}
        </select>
        <i
            class="fa fa-chevron-down absolute top-0 right-0 m-12 mr-4 text-gray-600"
        ></i>
    </div>
    <div class="mt-4">
        <label
            for="price"
            class="text-gray-600 uppercase text-xs font-semibold"
        >Price range</label>
        <div id="price-slider" class="mt-3"></div>
        <div class="flex mt-2 justify-between">
            <div class="flex">
                <span class="font-semibold">₦</span>
                <input
                    type="number"
                    class="w-16 font-semibold"
                    id="minPrice"
                    name="minPrice"
                />
            </div>
            <div class="flex">
                <span class="font-semibold">₦</span>
                <input
                    type="number"
                    class="w-16 font-semibold"
                    id="maxPrice"
                    name="maxPrice"
                />
            </div>
        </div>
    </div>
    <div class="mt-2">
        <button
            type="submit"
            class="text-white focus:outline-none focus:shadow-outline mt-4 font-semibold w-full p-4 hover:bg-green-600 rounded-md uppercase tracking-wider bg-green-500 transition duration-150"
        >search</button>
    </div>
</form>