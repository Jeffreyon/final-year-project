<a
    href="/rooms/{{_id}}"
    class="inline-block shadow rounded-md overflow-hidden hover:shadow-xl transition-shadow duration-150 ease-in-out"
>
    <img
        crossorigin="anonymous"
        data-src={{imgUrl}}
        alt="room in {{area}}"
        class="w-full h-48 sm:h-40 object-cover lazy"
    />
    <div class="bg-white p-5">
        <div class="flex text-xs uppercase tracking-wider text-gray-600">
            <div class="mr-1 font-semibold">{{roomType}}</div>&bull;
            <div class="mx-1">{{beds}} room{{greater beds}}</div>&bull;
            <div class="mx-1">{{baths}} bath{{greater baths}}</div>
            {{#if upstairs}}
                &bull;<div class="ml-1"><i class="fa fa-arrow-up"></i></div>
            {{/if}}
        </div>
        <div class="mt-2 items-baseline">
            <span
                class="font-semibold text-lg uppercase tracking-wide"
            >{{price}}</span>
            <span class="text-sm text-gray-600">/yr</span>
            {{#if hasBills}}
                <span
                    class="text-sm bg-green-200 text-green-700 font-semibold px-2 rounded-full ml-1"
                >+Bills</span>
            {{/if}}
        </div>
        <div class="text-gray-700 text-sm mt-1"><i
                class="fa fa-map-marker-alt text-gray-600 mr-1"
            ></i>{{area}}
        </div>
    </div>
</a>