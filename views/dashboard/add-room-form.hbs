<main class="w-full md:max-w-3xl xl:max-w-5xl px-3 mx-auto">
    <div>
        <a href="/dashboard/add-room" class=" text-gray-600 hover:text-gray-700 text-sm mr-5"><i
                class="fa fa-arrow-left mr-1"></i>Back to choose lodge</a>
        <a href="/dashboard" class=" text-gray-600 hover:text-gray-700 text-sm"><i
                class="fa fa-th-large mr-1"></i>Dashboard</a>
    </div>
    <div class="mt-8">
        <h2 class=" text-lg font-semibold text-gray-700">Add Room in {{lodge.name}}</h2>
        <div class="my-5 border-t border-gray-400"></div>
        <form action="/dashboard/add-room?_csrf={{_csrfToken}}" enctype="multipart/form-data" method="POST" class="w-full sm:w-2/3 md:w-1/2 xl:w-2/5">
            <input type="hidden" name="_csrf" value="{{_csrfToken}}">
            <input type="hidden" name="lodgeId" value="{{lodge._id}}">
            <input type="file" name="room-images" accept="image/*" id="" multiple required>
            <div class=" mt-2">
                <label for="roomNumber" class=" font-semibold text-gray-600">Room number</label>
                <input type="number" id="roomNumber" name="roomNumber" required="true"
                    class=" w-full px-4 py-3 bg-gray-200 border border-gray-400 mt-1 rounded-md focus:outline-none focus:shadow-outline transition duration-150">
            </div>
            <div class=" mt-2">
                <label for="price" class=" font-semibold text-gray-600">Price</label>
                <input type="number" id="price" name="price" required="true"
                    class=" w-full px-4 py-3 bg-gray-200 border border-gray-400 mt-1 rounded-md focus:outline-none focus:shadow-outline transition duration-150">
            </div>
            <div class=" mt-2">
                <label for="description" class=" font-semibold text-gray-600">Description</label>
                <input type="text" id="description" name="description" required="true"
                    class=" w-full px-4 py-3 bg-gray-200 border border-gray-400 mt-1 rounded-md focus:outline-none focus:shadow-outline transition duration-150">
            </div>
            <div class=" my-4">
                <input type="checkbox" name="upstairs" id="upstairs">
                <label for="upstairs" class=" font-semibold text-gray-600">Upstairs</label>
            </div>
            <div class="border-t border-gray-400"></div>
            <fieldset class="p-3 border border-gray-400 rounded-md mt-4" name="bedroomAmenities">
                <legend class=" text-gray-600 font-semibold uppercase text-sm px-2 -mx-2">Bedroom</legend>
                <div class="amenity-template mt-3 relative">
                    <select
                        class="select-box-arrow mb-1 appearance-none w-full px-4 py-3 bg-white shadow border border-gray-300 mt-1 rounded-md focus:outline-none focus:shadow-outline transition duration-150"
                        name="bedroomAmenities" id="bedroomAmenities">
                        {{#form_data 'room'}}
                            {{#if room}}
                                {{#each room.bedroom}}
                                <option value="{{this}}">{{this}}</option>
                                {{/each}}
                            {{/if}}
                        {{/form_data}}
                    </select>
                    <i class="fa fa-chevron-down absolute top-0 right-0 my-5 mr-4 text-gray-600"></i>
                </div>
                <div class="mt-5 flex items-center justify-between border-t border-gray-400">
                    <button
                        class="px-3 add-amenity py-2 mt-3 rounded-md font-semibold text-sm tracking-wider bg-green-200 text-green-600 focus:outline-none focus:shadow-outline transition duration-150"><i
                            class="fa fa-plus mr-1"></i>Add amenity</button>
                    <button class="mt-3 remove-amenity font-semibold text-sm text-red-500 focus:outline-none"><i
                            class="fa fa-times mr-1"></i>Remove</button>
                </div>
            </fieldset>
            <fieldset class="p-3 border border-gray-400 rounded-md mt-4" name="bathroomAmenities">
                <legend class=" text-gray-600 font-semibold uppercase text-sm px-2 -mx-2">Bathroom</legend>
                <div class="amenity-template mt-3 relative">
                    <select
                        class="select-box-arrow mb-1 appearance-none w-full px-4 py-3 bg-white shadow border border-gray-300 mt-1 rounded-md focus:outline-none focus:shadow-outline transition duration-150"
                        name="bathroomAmenities" id="bathroomAmenities">
                        {{#form_data 'room'}}
                            {{#if room}}
                                {{#each room.bathroom}}
                                <option value="{{this}}">{{this}}</option>
                                {{/each}}
                            {{/if}}
                        {{/form_data}}
                    </select>
                    <i class="fa fa-chevron-down absolute top-0 right-0 my-5 mr-4 text-gray-600"></i>
                </div>
                <div class="mt-5 flex items-center justify-between border-t border-gray-400">
                    <button
                        class="px-3 add-amenity py-2 mt-3 rounded-md font-semibold text-sm tracking-wider bg-green-200 text-green-600 focus:outline-none focus:shadow-outline transition duration-150"><i
                            class="fa fa-plus mr-1"></i>Add amenity</button>
                    <button class="mt-3 remove-amenity font-semibold text-sm text-red-500 focus:outline-none"><i
                            class="fa fa-times mr-1"></i>Remove</button>
                </div>
            </fieldset>
            {{#if lodge.withKitchen}}
            <fieldset class="p-3 border border-gray-400 rounded-md mt-4" name="kitchenAmenities">
                <legend class=" text-gray-600 font-semibold uppercase text-sm px-2 -mx-2">Kitchen</legend>
                <div class="amenity-template mt-3 relative">
                    <select
                        class="select-box-arrow mb-1 appearance-none w-full px-4 py-3 bg-white shadow border border-gray-300 mt-1 rounded-md focus:outline-none focus:shadow-outline transition duration-150"
                        name="kitchenAmenities" id="kitchenAmenities">
                        {{#form_data 'room'}}
                            {{#if room}}
                                {{#each room.kitchen}}
                                <option value="{{this}}">{{this}}</option>
                                {{/each}}
                            {{/if}}
                        {{/form_data}}
                    </select>
                    <i class="fa fa-chevron-down absolute top-0 right-0 my-5 mr-4 text-gray-600"></i>
                </div>
                <div class="mt-5 flex items-center justify-between border-t border-gray-400">
                    <button
                        class="px-3 add-amenity py-2 mt-3 rounded-md font-semibold text-sm tracking-wider bg-green-200 text-green-600 focus:outline-none focus:shadow-outline transition duration-150"><i
                            class="fa fa-plus mr-1"></i>Add amenity</button>
                    <button class="mt-3 remove-amenity font-semibold text-sm text-red-500 focus:outline-none"><i
                            class="fa fa-times mr-1"></i>Remove</button>
                </div>
            </fieldset>
            {{/if}}
            <div class="mt-5 sm:text-right">
                <button type="submit"
                    class="p-3 w-full sm:w-40 rounded-md font-semibold uppercase tracking-wider bg-green-500 hover:bg-green-600 text-white focus:outline-none focus:shadow-outline transition duration-150">Create room</button>
            </div>
        </form>
    </div>
</main>