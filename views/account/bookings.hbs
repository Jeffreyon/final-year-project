{{#section 'title'}}
<title>Your Bookings &bull; Keybase</title>
{{/section}}

<main class=" max-w-5xl mx-auto my-10 px-3">
    <div>
        {{#if bookings.length}}
        <div class="my-3">
            <h2 class=" text-lg font-semibold">Your Bookings</h2>
        </div>
        <div class="grid mt-6 gap-4 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
            {{#each bookings}}
            {{> bookingCard}}
            {{/each}}
        </div>
        {{else}}
        <div class="item info-card p-3 bg-white flex justify-center items-center rounded-md shadow-sm">
            <div class="text-center">
                <h1 class="text-xl md:text-3xl font-semibold">Move in today, find a room to book</h1>
                <p class="mt-1 text-gray-600">You currently do not have any bookings</p>
                <div class="w-full text-center mt-8">
                    <a href="/rooms"
                        class=" text-white focus:outline-none inline-block focus:shadow-outline font-semibold py-3 px-6 hover:bg-green-600 rounded-md uppercase tracking-wider bg-green-500 transition duration-150">Get
                        started</a>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</main>